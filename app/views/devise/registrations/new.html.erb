<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
     <div class="field">
    <%= f.label :contact %><br />
    <%= f.text_field :contact, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, autofocus: true %>
  </div>

         <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
  </div>
  
         <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation %>
  </div>
  
  <%= f.hidden_field :role, value: "buyer" %>
  
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
